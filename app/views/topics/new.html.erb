<h1>New topic</h1>

<% form_for(@topic) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <input type="hidden" id="topic_time" name="topic[creation_time]" value="<%=Time.now %>" />
  <input type="hidden" id="topic_time" name="topic[user_id]" value="<%=current_user.id%>" />

  <p>
    <%= f.submit 'Create' %>
  </p>  
  
<% end %>

<%= link_to 'Back', topics_path %>