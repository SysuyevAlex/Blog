<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <input type="hidden" id="post_time" name="post[user_id]" value="<%=current_user.id%>" />
  <input type="hidden" id="post_time" name="post[creation_time]" value="<%=Time.now%>" />
  <input type="hidden" id="post_time" name="post[topic_id]" value="<%=params[:topic]%>" />

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', "#{topics_path}/#{params[:topic]}" %>